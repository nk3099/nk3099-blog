  .prose pre {
    overflow: auto;                 /* both axes when needed */
    max-height: 28rem;              /* cap vertical height */
    -webkit-overflow-scrolling: touch;
    border: 1px solid hsl(0 0% 90% / 0.6);
    border-radius: 0.5rem;
  }

  .prose pre code {
    white-space: pre;               /* keep original formatting */
    word-break: normal;
  }

  /* Optional: only for Python blocks (uncomment if desired) */
